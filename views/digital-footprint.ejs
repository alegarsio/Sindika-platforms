    <style>
        body { 
            font-family: 'Inter', sans-serif;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-15px); }
        }
        
        @keyframes pulse-ring {
            0% {
                transform: scale(0.8);
                opacity: 1;
            }
            100% {
                transform: scale(1.5);
                opacity: 0;
            }
        }
        
        @keyframes travel {
            0% {
                offset-distance: 0%;
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                offset-distance: 100%;
                opacity: 0;
            }
        }
        
        @keyframes check-in {
            0%, 100% {
                transform: scale(1);
                opacity: 0.8;
            }
            50% {
                transform: scale(1.2);
                opacity: 1;
            }
        }
        
        @keyframes gradient-shift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        .float-animation {
            animation: float 4s ease-in-out infinite;
        }
        
        .pulse-ring {
            animation: pulse-ring 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        
        .traveler {
            offset-path: path('M 150 225 Q 250 150 350 225');
            animation: travel 4s ease-in-out infinite;
        }
        
        .traveler-2 {
            offset-path: path('M 350 225 Q 450 300 550 225');
            animation: travel 4s ease-in-out infinite 2s;
        }
        
        .traveler-3 {
            offset-path: path('M 550 225 Q 650 150 750 225');
            animation: travel 4s ease-in-out infinite 4s;
        }
        
        .check-in-pulse {
            animation: check-in 1s ease-in-out;
        }
        
        .feature-card {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
        }
        
        .gradient-text {
            background: linear-gradient(90deg, #3b82f6, #8b5cf6, #ec4899, #3b82f6);
            background-size: 200% auto;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: gradient-shift 6s ease infinite;
        }
        
        @keyframes timeline-grow {
            from {
                height: 0;
            }
            to {
                height: 100%;
            }
        }
        
        .timeline-line {
            animation: timeline-grow 3s ease-out forwards;
        }
        
        @keyframes fade-in-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .timeline-item {
            animation: fade-in-up 0.6s ease-out forwards;
            opacity: 0;
        }
    </style>
</head>
