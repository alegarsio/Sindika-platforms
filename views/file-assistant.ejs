    <script>
        const chatMessages = document.getElementById('chatMessages');
        const chatInput = document.getElementById('chatInput');
        let messageCount = 0;

        // Predefined conversation flow
        const conversation = [
            { type: 'user', text: 'Cari notulensi rapat keuangan terakhir' },
            { type: 'ai', text: 'Saya menemukan "Notulensi Rapat Keuangan" dari 15 September 2024. Dokumen ini membahas alokasi dana untuk renovasi dan anggaran kegiatan Q4. Ingin saya buka atau ringkas?' },
            { type: 'user', text: 'Berikan ringkasannya' },
            { type: 'ai', text: 'Berikut ringkasan notulensi:\n\n‚Ä¢ Persetujuan anggaran renovasi Rp 150 juta\n‚Ä¢ Alokasi dana kegiatan pemuda Rp 25 juta\n‚Ä¢ Target pengumpulan persembahan Q4: Rp 200 juta\n‚Ä¢ Rencana audit keuangan bulan November\n\nAda yang ingin Anda tanyakan lebih lanjut?' }
        ];

        function sendMessage() {
            const message = chatInput.value.trim();
            if (!message) return;

            addMessage('user', message);
            chatInput.value = '';

            setTimeout(() => {
                if (messageCount < conversation.length && conversation[messageCount].type === 'ai') {
                    addMessage('ai', conversation[messageCount].text);
                    messageCount++;
                }
            }, 1000);
        }

        function addMessage(type, text) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `chat-message-${type} flex gap-3 ${type === 'user' ? 'justify-end' : ''}`;
            
            if (type === 'ai') {
                messageDiv.innerHTML = `
                    <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-sm flex-shrink-0">AI</div>
                    <div class="bg-slate-100 rounded-2xl rounded-tl-none px-4 py-3 max-w-[80%]">
                        <p class="text-sm text-slate-700 whitespace-pre-line">${text}</p>
                    </div>
                `;
            } else {
                messageDiv.innerHTML = `
                    <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-2xl rounded-tr-none px-4 py-3 max-w-[80%]">
                        <p class="text-sm whitespace-pre-line">${text}</p>
                    </div>
                `;
            }
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Auto-play demo conversation
        let autoPlayIndex = 0;
        function autoPlayDemo() {
            if (autoPlayIndex < conversation.length) {
                const msg = conversation[autoPlayIndex];
                if (msg.type === 'user') {
                    chatInput.value = msg.text;
                    setTimeout(() => {
                        sendMessage();
                        autoPlayIndex++;
                        setTimeout(autoPlayDemo, 2000);
                    }, 1000);
                } else {
                    autoPlayIndex++;
                    setTimeout(autoPlayDemo, 2000);
                }
            } else {
                // Reset after completion
                setTimeout(() => {
                    chatMessages.innerHTML = `
                        <div class="chat-message-ai flex gap-3">
                            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-sm flex-shrink-0">AI</div>
                            <div class="bg-slate-100 rounded-2xl rounded-tl-none px-4 py-3 max-w-[80%]">
                                <p class="text-sm text-slate-700">Halo! Saya siap membantu Anda mencari dan menganalisis dokumen. Ada yang bisa saya bantu?</p>
                            </div>
                        </div>
                    `;
                    autoPlayIndex = 0;
                    messageCount = 0;
                    setTimeout(autoPlayDemo, 3000);
                }, 5000);
            }
        }

        // Start auto-play after 2 seconds
        setTimeout(autoPlayDemo, 2000);

        // Allow Enter key to send message
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        // File highlight animation
        const fileItems = document.querySelectorAll('.file-item');
        let currentHighlight = 0;

        setInterval(() => {
            fileItems.forEach(item => item.classList.remove('ring-2', 'ring-blue-500'));
            fileItems[currentHighlight].classList.add('ring-2', 'ring-blue-500');
            currentHighlight = (currentHighlight + 1) % fileItems.length;
        }, 3000);
    </script>

